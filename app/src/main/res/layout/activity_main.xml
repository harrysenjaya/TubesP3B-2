<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/space"/>

    <ImageView
        android:id="@+id/distance"
        android:layout_width="150px"
        android:layout_height="150px"
        android:src="@drawable/location"
        android:layout_marginTop="10px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:textColor="@color/warna"
        android:textSize="50px"
        android:layout_toRightOf="@id/distance"
        android:layout_marginLeft="10px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/jarak"
        android:textColor="@color/warna"
        android:textSize="50px"
        android:layout_toRightOf="@id/distance"
        android:layout_marginTop="55px"
        android:layout_marginLeft="10px"/>

    <ImageView
        android:id="@+id/score"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_below="@+id/distance"
        android:src="@drawable/score"
        android:layout_marginTop="10px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:textColor="@color/warna"
        android:textSize="50px"
        android:layout_toRightOf="@id/score"
        android:layout_marginLeft="10px"
        android:layout_marginTop="165px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/skor"
        android:textColor="@color/warna"
        android:textSize="50px"
        android:layout_toRightOf="@id/score"
        android:layout_marginLeft="10px"
        android:layout_marginTop="220px"/>

    <ImageView
        android:id="@+id/star"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_centerHorizontal="true"
        android:src="@drawable/star"
        android:layout_marginTop="10px"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/bintang"
        android:layout_height="wrap_content"
        android:text="Kill"
        android:textSize="50px"
        android:layout_toRightOf="@id/star"
        android:layout_marginLeft="475px"
        android:textColor="@color/warna"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kill"
        android:text="0"
        android:textSize="50px"
        android:layout_toRightOf="@id/star"
        android:layout_below="@id/bintang"
        android:layout_marginLeft="475px"
        android:textColor="@color/warna"/>


    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/play"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10px"
        android:backgroundTint="#F7F2F2"
        android:src="@android:drawable/ic_media_play" />


</RelativeLayout>
